<%= form_with model: task do |form| %>
  
    <div>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
      <% task.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.label :description %><br>
      <%= form.text_area :description %><br>
      <% task.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.label :deadline %><br>
      <%= form.text_area :deadline %><br>
      <% task.errors.full_messages_for(:deadline).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.submit %>
    </div>
<% end %>