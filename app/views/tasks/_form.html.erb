<%= form_with model:  [ current_user, @task ] do |form| %>
    <div>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
      <% @task.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.label :description %><br>
      <%= form.text_area :description %><br>
      <% @task.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>


    <div>
      <%= form.label :deadline %><br>
      <%= form.date_field :deadline %><br><br>
      <% @task.errors.full_messages_for(:deadline).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.label :status %><br>
      <%= form.select :status, options_for_select(["Pending", "Complete", "Overdue"]),
        :prompt=>"Select status" %>
      <% @task.errors.full_messages_for(:status).each do |message| %>
       <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.submit %>
    </div>
<% end %>